<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor1"
    tools:context=".PasswordResetActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/mazzardhmediumitalic"
                android:text="RESET PASSWORD"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:textStyle="bold"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:src="@drawable/logo" />

        <EditText
            android:id="@+id/reset_pwd"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/textColor"
        android:drawableStart="@mipmap/email"
        android:drawablePadding="16dp"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        android:maxLines="1"
        android:padding="16dp"
        android:shadowColor="@color/textColor"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reset_acc"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:background="@drawable/edit_style"
            android:fontFamily="@font/mazzardhblackitalic"
            android:text="@string/reset_password"
            android:textColor="@color/backgroundColor"
            android:textSize="20sp"
            app:cornerRadius="0dp"
            app:elevation="6dp"
            app:strokeWidth="18dp"
            app:strokeColor="@color/strokecol"
            app:backgroundTint="@color/textColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_back"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_style"
            android:fontFamily="@font/mazzardhblackitalic"
            android:text="@string/login"
            android:textColor="@color/backgroundColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:backgroundTint="@color/textColor"
            app:cornerRadius="0dp"
            app:elevation="6dp"
            app:strokeWidth="18dp"
            app:strokeColor="@color/strokecol" />




        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_back"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_style"
            app:backgroundTint="@color/textColor"
            android:fontFamily="@font/mazzardhblackitalic"
            android:text="Create Account"
            android:textColor="@color/backgroundColor"
            android:textSize="20sp"
            app:cornerRadius="0dp"
            app:elevation="6dp"
            app:strokeWidth="18dp"
            app:strokeColor="@color/strokecol"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </LinearLayout>
</ScrollView>
