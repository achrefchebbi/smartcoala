<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor1"
    tools:context=".LayoutVoiceControlActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/logo" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Manuel"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/switch2"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="300dp"
        android:contentDescription="Manuel Control" />


    <ImageView
        android:id="@+id/Voice"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        android:src="@drawable/voice"
        android:contentDescription="Voice Control" />
</RelativeLayout>
</LinearLayout>




    </RelativeLayout>

