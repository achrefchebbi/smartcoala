<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_checked="true">
    <shape android:shape="rectangle">
        <solid android:color="@color/textColor"></solid>
        <size android:width="21dp" android:height="15dp"></size>
        <corners android:radius="18dp"/>
        <stroke android:width="0.7dp" android:color="@color/textColor"></stroke>
    </shape>
</item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundColor1"></solid>
            <size android:width="21dp" android:height="15dp"></size>
            <corners android:radius="18dp"/>
            <stroke android:width="0.7dp" android:color="@color/textColor"></stroke>
        </shape>
    </item>
</selector>